{
  "name": "Uniform Cookie UI", 
  "service_worker_scripts": [
    "js/worker.js"
  ], 
  "content_scripts": [
    "js/content.js"
  ], 
  "content_include": [
    "js/rules.json",
    "images/cookie-green.png",
    "images/cookie-idle.png",
    "images/cookie-red.png",
    "images/cookie-yellow.png",
    "js/popup.js",
    "cookie_ui_popup.html"
  ], 
  "permissions": [
    "cookies",
    "tabs",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "browser_style": true,
    "default_title": "Cookie UI",
    "default_popup": "js/modules/cookie-ui/cookie_ui_popup.html"
  }
}
